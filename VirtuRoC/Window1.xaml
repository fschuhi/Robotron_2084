<Window x:Class="Robotron.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robotron"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="ListBoxItemStyle1" TargetType="{x:Type ListBoxItem}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        <sys:String x:Key="Label">Label</sys:String>
        <sys:String x:Key="Bytes">Bytes</sys:String>
        <sys:String x:Key="Opcode">Opcode</sys:String>
        <local:PaddingConverter x:Key="PaddingConverter" />
        <DataTemplate DataType="{x:Type local:AddressItem}">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding Address}" Padding="-1" Margin="0" BorderThickness="0"/>
                <TextBlock Text=" "/>
                <TextBlock Text="{Binding Bytes,Converter={StaticResource PaddingConverter}, ConverterParameter={StaticResource Bytes}}" />
                <TextBlock Text=" "/>
                <TextBlock Text="{Binding Label, Converter={StaticResource PaddingConverter}, ConverterParameter={StaticResource Label}}" />
                <TextBlock Text=" "/>
                <TextBlock local:Attached.FormattedText="{Binding Opcode, Converter={StaticResource PaddingConverter}, ConverterParameter={StaticResource Opcode}}" Foreground="Blue" MouseUp="TextBlock_MouseUp"/>
                <TextBlock Text=" "/>
                <TextBlock Text="{Binding Operand}" FontWeight="Bold"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:CommentItem}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Comment}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListBox Name="listBox" FontFamily="Consolas" FontSize="12"  ItemContainerStyle="{DynamicResource ListBoxItemStyle1}"/>
    </Grid>
</Window>
